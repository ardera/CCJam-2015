package "ardera.test";
(public - class) "Hey";

public "Hey";
function Hey()
	-- constructor
end


-- fields are declared like this:
(public - static - final - string) "helloworld"; -- a class variable
helloworld = "something" -- causes no error, because helloworld wasn't given a value before

(public - static - final - number) "something";
something = 42


-- and methods like this:
(public - var) : doSomething(string, number, number);
function doSomething(str1, nr1, nr2)
	-- can return any value, including nil
end

(public - var) : doAnything(varargs - table[string][string]); -- doAnything returns a variable with any type, and requires arguments of tables with string keys and values
function doAnything(...)
	local args = {...}
	-- all elements of "args" are tables, that have strings as keys and values
end

(public - void) : doTests();
function doTests()
	-- do some tests
end